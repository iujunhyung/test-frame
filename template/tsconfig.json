{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve", // JSX를 유지, Next.js가 처리하도록
    "moduleResolution": "Bundler",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": false,
    "incremental": true,
    "outDir": "./.next",
    "baseUrl": ".",
    "paths": {
      "@iyu-web/prod/*": [
        "../package/dist/*"
      ],
      "@iyu-web/dev/*": [
        "../package/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    ".next",
    "node_modules"
  ]
}