{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "Node",
    "outDir": "./dist/",    
    "declaration": true,
    "declarationDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "@iyu-web/prod/*": [ "dist/*" ],
      "@iyu-web/dev/*": [ "src/*" ],
      "@css/*": [ "./src/styles/*" ],
    },
    "typeRoots": ["./src/declarations", "./node_modules/@types"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}